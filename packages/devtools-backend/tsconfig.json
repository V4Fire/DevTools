{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "CommonJS",
    "rootDir": "./src",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "/node_modules/",
    "dist"
  ]
}
