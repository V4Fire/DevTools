b-tree_theme_pretty extends b-tree
	/theme &__item-wrapper
		display flex

	/theme &__marker
		width 16px

	/theme &__fold
		text-align center

	/theme &__fold:before
		content ""
		display inline-block

		border-top 4px solid transparent
		border-bottom 4px solid transparent
		border-left 6px solid rgba(100, 100, 100, 0.5)

		transition transform 0.1s ease
		transform rotate(90deg)

	/theme &__node_folded_true &__fold:before
		transform rotate(0)

	/theme &__node_folded_true &__children
		display none
