@import "components/base/b-tree/b-tree.styl"

b-components-tree extends b-tree
	&__wrapper
		&_active_true
			position relative
			height 88vh
			overflow auto

	&__children
		padding-left 16px

	&__item-wrapper
		cursor pointer

	&__marker
		cursor default

	&__input
		width 100%
		padding 8px 16px
		border-bottom solid 1px black
