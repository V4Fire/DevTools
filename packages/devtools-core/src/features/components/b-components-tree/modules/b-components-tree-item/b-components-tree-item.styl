@import "components/super/i-block/i-block.styl"

b-components-tree-item extends i-block
	&__name
		&_selected_true
			background-color orange

	&__details
		visibility hidden
		opacity 0

		&_warn_true
			visibility visible
			opacity 1
			color red

	&:hover
		& ^[0]__details
			visibility visible
			opacity 1
