@import "components/super/i-dynamic-page/i-dynamic-page.styl"
@import "components/directives/highlight/g-highlight.styl"

p-components extends i-dynamic-page
	&__content
		display flex

		> *
			display flex
			flex-direction column
			height calc(100vh - var(--header-height, 0))

		> :first-child
			flex 0 0 60%
			border-right solid 1px black

		> :nth-child(2)
			flex 1 1 40%

	&__placeholder
		padding 8px
		border-bottom solid 1px black
